    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "application.py",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "13000"
            ],
            "cwd": "${workspaceFolder}/backend",
            "jinja": true
        },
        {
            "name": "Package",
            "type": "python",
            "request": "launch",
            "program": "packaging/prepare_installation.py",
            "args": [
                "--version",
                "2.1a1",
                "--skip-frontend",
            ],
            "cwd": "${workspaceFolder}/backend",
        },
    ]
}