{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "path": "electron/",
            "problemMatcher": [],
            "label": "Start GUI",
            "detail": "Opens the t2wml GUI (run it after the frontend is built)"
        },
        {
            "type": "npm",
            "script": "dev",
            "path": "electron/",
            "problemMatcher": [],
            "isBackground": true,
            "label": "Build and Watch GUI",
            "detail": "Continuously builds the frontend"
        },
        {
            "type": "npm",
            "script": "watch",
            "path": "electron/",
            "problemMatcher": ["$eslint-stylish", {
                "base": "$tsc-watch",
                "fileLocation": ["relative", "${workspaceFolder}/electron"]
            }],
            "isBackground": true,
            "label": "Watch for GUI Errors",
            "detail": "Look for errors and warnings in the entire code base"
        },
        {
            "type": "shell",
            "label": "Backend",
            "detail": "Runs the backend",
            "command": "${config:python.pythonPath}",
            "args": [
                "backend/t2wml-server.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "lint",
            "path": "electron/",
            "problemMatcher": [],
            "label": "npm: lint - electron",
            "detail": "eslint --ext *.ts --ext *.tsx src"
        }
    ]
}